{
  "name": "octo-music",
  "productName": "Octo Music",
  "version": "0.1.6",
  "description": "Octo Music Player",
  "author": "RedPigeon",
  "private": true,
  "type": "module",
  "main": "electron/main.js",
  "scripts": {
    "dev": "concurrently -k \"vite --port 5173\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "dist": "node tools/build-stamped.mjs nsis",
    "dist:dir": "node tools/build-stamped.mjs dir",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.0.0",
    "concurrently": "^9.0.0",
    "electron": "^40.0.0-beta.4",
    "electron-builder": "^26.4.0",
    "eslint": "^9.0.0",
    "eslint-plugin-vue": "^9.0.0",
    "globals": "^15.0.0",
    "vite": "^6.0.0",
    "vue-eslint-parser": "^9.0.0",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "hls.js": "^1.5.15",
    "pinia": "^2.1.7",
    "vue": "^3.4.0",
    "vue-router": "^4.3.0"
  },
  "build": {
    "appId": "nl.redpigeon.octo",
    "icon": "electron/assets/icon.png",
    "productName": "Octo",
    "copyright": "Copyright Â© 2026 RedPigeon",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist",
      "electron",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        }
      ],
      "category": "Audio",
      "maintainer": "red-pigeon"
    },
    "nsis": {
      "include": "build/installer.nsh",
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Octo"
    },
    "publish": {
      "provider": "github",
      "owner": "red-pigeon",
      "repo": "octo-music",
      "releaseType": "release"
    }
  }
}
